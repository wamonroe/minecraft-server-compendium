<% if notice.present? %>
  <div class="flex flex-col p-5 text-green-600 bg-green-100 rounded-lg" data-controller="dismissible">
    <div class="flex items-center">
      <svg class="flex-none w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>
      <div class="flex-1 ml-2 font-medium text-green-800">
        Operation successful
      </div>
    </div>
    <div class="flex mt-3">
      <div class="flex-none w-5"></div>
      <div class="flex flex-col flex-1 ml-2">
        <div class="text-sm">
          <%= notice %>
        </div>
        <div class="mt-3">
          <button class="font-medium text-green-800 cursor-pointer hover:text-green-900" data-action="dismissible#dismiss">
            Dismiss
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>
