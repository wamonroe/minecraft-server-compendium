<% content_for(:header) do %>
  <h1 class="mt-6 text-3xl font-extrabold leading-9 text-gray-900"><%= t "devise.invitations.edit.header" %></h1>
<% end %>

<%= form_for(resource, as: resource_name, url: user_invitation_path, html: { method: :put, class: 'flex flex-col space-y-6' }) do |form| %>
  <%= render "shared/errors", record: resource %>
  <%= form.hidden_field :invitation_token, readonly: true %>

  <div class="flex flex-col">
    <%= form.label :name, class: 'block text-sm leading-5 font-medium text-gray-700' %>
    <div class="relative mt-1 rounded-md shadow-sm">
      <%= form.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-input block w-full pl-7 pr-12 sm:text-sm sm:leading-5' %>
    </div>
  </div>

  <div class="flex flex-col">
    <%= form.label :username, class: 'block text-sm leading-5 font-medium text-gray-700' %>
    <div class="relative mt-1 rounded-md shadow-sm">
      <%= form.text_field :username, class: 'form-input block w-full pl-7 pr-12 sm:text-sm sm:leading-5' %>
    </div>
  </div>

  <% if form.object.class.require_password_on_accepting %>
    <div class="flex flex-col">
      <div class="flex items-baseline">
        <%= form.label :password, 'New password', class: 'block text-sm leading-5 font-medium text-gray-700' %>
        <% if @minimum_password_length %>
          <span class="ml-2 text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      </div>
      <div class="relative mt-1 rounded-md shadow-sm">
        <%= form.password_field :password, autocomplete: 'new-password', class: 'form-input block w-full pl-7 pr-12 sm:text-sm sm:leading-5' %>
      </div>
    </div>

    <div class="flex flex-col">
      <%= form.label :password_confirmation, 'Confirm new password', class: 'block text-sm leading-5 font-medium text-gray-700' %>
      <div class="relative mt-1 rounded-md shadow-sm">
        <%= form.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-input block w-full pl-7 pr-12 sm:text-sm sm:leading-5' %>
      </div>
    </div>
  <% end %>

  <div class="flex items-center justify-between">
    <%= form.submit t('devise.invitations.edit.submit_button'), class: 'rounded-lg bg-green-700 py-2 px-4 text-green-100 hover:bg-green-800 cursor-pointer' %>
  </div>
<% end %>
