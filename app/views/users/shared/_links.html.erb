<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_user_session_path, class: "block text-sm leading-5 px-4 py-2 hover:bg-green-200 hover:text-green-700" %>
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_user_password_path, class: "block text-sm leading-5 px-4 py-2 hover:bg-green-200 hover:text-green-700" %>
<% end %>
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_user_confirmation_path, class: "block text-sm leading-5 px-4 py-2 hover:bg-green-200 hover:text-green-700" %>
<% end %>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_user_unlock_path, class: "block text-sm leading-5 px-4 py-2 hover:bg-green-200 hover:text-green-700" %>
<% end %>
