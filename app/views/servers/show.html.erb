<%= render 'shared/notice', notice: notice %>

<% content_for(:active_server) do %>
  <%= render 'servers/menu_link', server: server %>
<% end %>

<div class="flex items-end justify-between pt-6 pb-4 text-green-800">
  <div class="flex items-center">
    <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path></svg>
    <div class="flex flex-col ml-2">
      <h1 class="text-2xl font-medium"><%= server.name %></h1>
      <div class="text-sm font-normal leading-5 text-gray-500">(<%= server.hostname_and_port %>)</div>
    </div>
  </div>
</div>

<div class="flex p-6 italic text-gray-700 bg-gray-200 rounded-lg">
  <div class="flex-1">
    <% if server.description.blank? %>
      <%= "< Edit to add a server description >" %>
    <% else %>
      <%= server.description %>
    <% end %>
  </div>
  <div class="flex-none w-6">
    <%= link_to edit_server_path(server), class: 'text-gray-600 hover:text-gray-900' do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
    <% end %>
  </div>
</div>

<div class="flex items-end justify-between pt-6 pb-4">
  <div class="flex items-center space-x-1 text-green-800">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
    <h2 class="text-xl font-medium">Points of Interest</h2>
  </div>
  <%= link_to 'New', new_location_path(server_id: server.id), class: 'block rounded-lg bg-green-700 py-2 px-4 text-green-100 hover:bg-green-800' %>
</div>

<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
      <div class="overflow-hidden border-b border-gray-200 shadow sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-600 uppercase bg-gray-200">
                Name
              </th>
              <th class="px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-600 uppercase bg-gray-200">
                Dimension
              </th>
              <th class="w-full px-6 py-3 text-xs font-medium leading-4 tracking-wider text-left text-gray-600 uppercase bg-gray-200">
                Coordinates
              </th>
              <th class="px-6 py-3 bg-gray-200"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% server.locations.each do |location| %>
              <tr>
                <td class="px-6 py-4 whitespace-no-wrap">
                  <div class="text-sm leading-5 text-gray-900">
                    <%= location.name %>
                  </div>
                  <div class="text-sm leading-5 text-gray-500">
                    <%= location.description %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-no-wrap">
                  <div class="text-sm leading-5 text-gray-900">
                    <%= location.dimension.titleize %>
                  </div>
                </td>
                <td class="w-full px-6 py-4 text-sm whitespace-no-wrap">
                  <div class="text-sm leading-5 text-gray-900">
                    <%= location.coordinates %>
                  </div>
                </td>
                <td class="px-6 py-4 text-sm whitespace-no-wrap">
                  <div class="flex justify-end space-x-2 text-sm leading-5 text-gray-600">
                    <%= link_to edit_location_path(location), class: 'hover:text-green-800' do %>
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                    <% end %>
                    <%= link_to location, class: 'hover:text-red-900', method: :delete, data: { confirm: 'Are you sure?' } do %>
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
