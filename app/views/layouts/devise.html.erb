<% content_for(:body) do %>
  <div class="flex flex-col items-center m-6">
    <div class="flex flex-col items-center w-full my-6 mt-12 mb-4 sm:max-w-lg md:max-w-2xl">
      <div class="flex items-center justify-center w-16 h-16 text-green-100 bg-green-600 rounded-full">
        <%= inline_svg "icons/map-solid.svg", class: "w-12 h-12" %>
      </div>
      <% if content_for?(:header) %>
        <%= yield :header %>
      <% end %>
    </div>
    <div class="flex flex-col w-full px-12 pt-6 pb-8 m-4 bg-white border-2 border-gray-200 rounded-lg shadow-sm sm:max-w-lg md:max-w-2xl">
      <%= yield %>
    </div>
    <% if content_for?(:footer) %>
      <div class="flex flex-col items-center m-6">
        <%= yield :footer %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render template: "layouts/base" %>
