<% content_for(:body) do %>
  <div class="flex flex-col items-center m-6">
    <div class="flex flex-col items-center w-full my-6 mt-12 mb-4 sm:max-w-lg md:max-w-2xl">
      <div class="flex items-center justify-center w-16 h-16 text-green-100 bg-green-600 rounded-full">
        <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12 1.586l-4 4v12.828l4-4V1.586zM3.707 3.293A1 1 0 002 4v10a1 1 0 00.293.707L6 18.414V5.586L3.707 3.293zM17.707 5.293L14 1.586v12.828l2.293 2.293A1 1 0 0018 16V6a1 1 0 00-.293-.707z" clip-rule="evenodd"></path></svg>
      </div>
      <% if content_for?(:header) %>
        <%= yield :header %>
      <% end %>
    </div>
    <div class="flex flex-col w-full px-12 pt-6 pb-8 m-4 bg-white border-2 border-gray-200 rounded-lg shadow-sm sm:max-w-lg md:max-w-2xl">
      <%= yield %>
    </div>
    <% if content_for?(:footer) %>
      <div class="flex flex-col items-center m-6">
        <%= yield :footer %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render template: 'layouts/base' %>
