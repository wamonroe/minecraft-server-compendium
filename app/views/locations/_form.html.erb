<%= form_with model: location, local: true, class: "flex flex-col space-y-4" do |form| %>
  <%= render "shared/errors", record: location %>
  <%= form.hidden_field :server_id %>
  <%= hidden_field_tag :referrer, @referrer %>
  <div class="flex flex-col">
    <%= form.label :name, class: "block text-sm leading-5 font-medium text-gray-700" %>
    <div class="relative mt-1 rounded-md shadow-sm">
      <%= form.text_field :name, class: "block w-full pl-7 pr-12 sm:text-sm sm:leading-5" %>
    </div>
  </div>
  <div class="flex flex-col">
    <%= form.label :description, class: "block text-sm leading-5 font-medium text-gray-700" %>
    <div class="relative mt-1 rounded-md shadow-sm">
      <%= form.text_field :description, class: "block w-full pl-7 pr-12 sm:text-sm sm:leading-5" %>
    </div>
  </div>
  <div class="flex flex-col">
    <%= form.label :dimension, class: "block text-sm leading-5 font-medium text-gray-700" %>
    <div class="relative mt-1 rounded-md shadow-sm">
      <%= form.select :dimension, location.dimension_options, {}, {class: "block w-full pl-7 pr-12 sm:text-sm sm:leading-5"} %>
    </div>
  </div>
  <div class="flex flex-col">
    <h2 class="text-sm font-medium leading-5 text-gray-700">Coordinates</h2>
    <div class="flex p-5 mt-1 space-x-4 border border-gray-300 rounded-md shadow-sm">
      <div class="flex flex-col w-1/3">
        <%= form.label :x, class: "block text-sm leading-5 font-medium text-gray-700" %>
        <div class="relative mt-1 rounded-md shadow-sm">
          <%= form.text_field :x, class: "block w-full pl-7 pr-12 sm:text-sm sm:leading-5" %>
        </div>
      </div>
      <div class="flex flex-col w-1/3">
        <%= form.label :y, class: "block text-sm leading-5 font-medium text-gray-700" %>
        <div class="relative mt-1 rounded-md shadow-sm">
          <%= form.text_field :y, class: "block w-full pl-7 pr-12 sm:text-sm sm:leading-5" %>
        </div>
      </div>
      <div class="flex flex-col w-1/3">
        <%= form.label :z, class: "block text-sm leading-5 font-medium text-gray-700" %>
        <div class="relative mt-1 rounded-md shadow-sm">
          <%= form.text_field :z, class: "block w-full pl-7 pr-12 sm:text-sm sm:leading-5" %>
        </div>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-between">
    <%= form.submit class: "rounded-lg bg-green-700 py-2 px-4 text-green-100 hover:bg-green-800 cursor-pointer" %>
    <%= link_to "Cancel", (@referrer_path || server_path(location.server)), class: "rounded-lg text-gray-600 hover:text-gray-800 py-2 px-4" %>
  </div>
<% end %>
