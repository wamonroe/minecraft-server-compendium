<%= render 'shared/notice', notice: notice %>

<% content_for(:active_server) do %>
  <%= render 'servers/menu_link', server: location.server %>
<% end %>

<div class="flex items-center justify-between pt-6 pb-4">
  <div class="flex items-center space-x-1 text-green-800">
    <%= inline_svg 'icons/location-marker.svg', class: 'w-6 h-6' %>
    <h1 class="text-2xl font-medium">
      <%= location.name %>
    </h1>
  </div>
  <div class="flex items-center">
    <%= link_to edit_location_path(location, referrer: referrer_for(location_path(location))), class: 'text-gray-600 hover:text-gray-900 px-6 py-3' do %>
      <%= inline_svg 'icons/pencil-alt.svg', class: 'w-6 h-6' %>
    <% end %>
  </div>
</div>

<div class="flex flex-col p-6 mb-6 italic text-gray-700 bg-gray-200 rounded-lg">
  <div>
    <% if location.description.blank? %>
      <%= "< Edit to add a server description >" %>
    <% else %>
      <%= location.description %>
    <% end %>
  </div>
  <div class="flex mt-4 space-x-2 leading-7 border-t-2 border-gray-400">
    <div class="text-gray-500"><%= location.dimension_name %></div>
    <div class="text-gray-900"><%= location.coordinates %></div>
  </div>
</div>

<div class="flex flex-col items-center justify-center my-6">
  <%= link_to location, class: 'text-gray-500 hover:underline', method: :delete, data: { confirm: 'Are you sure?' } do %>
    Delete point of interest
  <% end %>
</div>
